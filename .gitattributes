# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.php text eol=lf
*.java text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.adoc text eol=lf
*.rst text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Archives
*.jar binary
*.war binary
*.ear binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.eslintrc.json export-ignore
.prettierrc.json export-ignore
.stylelintrc.json export-ignore
