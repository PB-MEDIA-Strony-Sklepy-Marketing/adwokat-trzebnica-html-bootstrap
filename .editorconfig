# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS, SCSS files
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 120

# JavaScript files
[*.{js,jsx}]
indent_size = 2
max_line_length = 100
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# PHP files
[*.php]
indent_size = 4

# Java files
[*.java]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab

# Package manager files
[{package.json,package-lock.json}]
indent_size = 2
